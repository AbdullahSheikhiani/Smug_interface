<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.DeviceFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            android:layout_width="203dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:text="option A"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintBottom_toTopOf="@+id/chip6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            android:layout_width="131dp"
            android:layout_height="59dp"
            android:layout_marginStart="72dp"
            android:text="option B"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintBottom_toTopOf="@+id/chip7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip5" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip7"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="32dp"
            android:text="option C"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip6" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="103dp"
            android:layout_height="166dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/presence_invisible"
            android:text="cancel/save"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toEndOf="@+id/chip7"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
