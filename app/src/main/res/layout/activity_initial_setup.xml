<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitialSetup">


    <TextView
        android:id="@+id/GesturesTxt"
        android:layout_width="162dp"
        android:layout_height="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="124dp"
        android:text="please connect to pspsps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/g0"
        app:layout_constraintTop_toBottomOf="@+id/g0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/g0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="network"
        app:layout_constraintStart_toStartOf="@+id/GesturesTxt"
        app:layout_constraintTop_toBottomOf="@+id/GesturesTxt" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="225dp"
        android:layout_height="53dp"
        android:layout_marginEnd="44dp"
        android:ems="12"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/g1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toEndOf="@+id/g1"
        app:layout_constraintTop_toTopOf="@+id/g1" />

    <Button
        android:id="@+id/confBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Configure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner0"
        android:layout_width="208dp"
        android:layout_height="55dp"
        android:layout_marginStart="112dp"
        app:layout_constraintBottom_toBottomOf="@+id/g0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/g0"
        app:layout_constraintTop_toTopOf="@+id/g0" />

    <Button
        android:id="@+id/reloadBtn"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:text="refresh"
        app:layout_constraintBottom_toBottomOf="@+id/GesturesTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GesturesTxt"
        app:layout_constraintTop_toTopOf="@+id/GesturesTxt" />


</androidx.constraintlayout.widget.ConstraintLayout>